 <!-- Modal -->
 <div class="modal fade" id="edit-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Edit Data</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form action="/content/update?_method=PUT" method="POST">
         <div class="form-group">
            <label for="">Title :</label>
            <input type="text" name="title" class="form-control title" required>
         </div>
         <div class="form-group">
            <label for="">Desc :</label>
            <input type="text" name="desc" class="form-control desc" required>
         </div>
         <div class="form-group">
            <label for="">Body :</label>
            <textarea name="body" class="form-control body"></textarea>
         </div>
        </div>
        <div class="modal-footer">
          <input type="hidden" name="id" class="id">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Update data</button>
        </div>
      </div>
    </div>
  </div>